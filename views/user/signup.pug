    .col-sm-12.offset-md-2.col-md-8
      .jumbotron
        h2.text-center Sign up
        .row
          .col-sm-12.col-md-12
            form(action='/signup', method='POST')
              div.formgroup
                label.small.mb-1.mt-3 Email:
                input.form-control(placeholder='Please enter your email', required=true, name='email', type='email', value='')
